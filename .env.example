# ============================================
# Configuration Environnement - Template
# ============================================
# Copiez ce fichier vers .env et remplissez les valeurs réelles
# NE JAMAIS COMMITER le fichier .env dans git

# ============================================
# Environnement
# ============================================
ENVIRONMENT=development
# Options: development, staging, production

# ============================================
# VPS OVH
# ============================================
VPS_HOST=your-vps-ip-or-hostname
VPS_USER=root
VPS_SSH_PORT=22
VPS_SSH_KEY_PATH=~/.ssh/id_rsa

# ============================================
# Cloudflare
# ============================================
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_TUNNEL_ID=your-tunnel-id
CLOUDFLARE_TUNNEL_SECRET=your-tunnel-secret
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_DOMAIN=1bonobo1.com

# Cloudflare Zero Trust
CLOUDFLARE_ZERO_TRUST_TEAM_NAME=your-team-name
CLOUDFLARE_ACCESS_CLIENT_ID=your-access-client-id
CLOUDFLARE_ACCESS_CLIENT_SECRET=your-access-client-secret

# ============================================
# OpenRouter API
# ============================================
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=openai/gpt-4-turbo

# ============================================
# CrewAI Configuration
# ============================================
CREWAI_LOG_LEVEL=INFO
CREWAI_MAX_ITER=5
CREWAI_MAX_RPM=10
CREWAI_TEMPERATURE=0.7

# ============================================
# n8n Configuration
# ============================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-this-password
N8N_ENCRYPTION_KEY=your-encryption-key-min-32-chars

# ============================================
# GitHub
# ============================================
GITHUB_USERNAME=1BoNoBo1
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO=projet_autonomie_financiere

# ============================================
# Vultr
# ============================================
VULTR_API_KEY=your-vultr-api-key

# ============================================
# RunPod
# ============================================
RUNPOD_API_KEY=your-runpod-api-key
RUNPOD_ENDPOINT_ID=your-endpoint-id

# ============================================
# Base de données (si nécessaire)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379

# ============================================
# Sécurité
# ============================================
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,1bonobo1.com,*.1bonobo1.com

# ============================================
# Monitoring et Logs
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-if-using
